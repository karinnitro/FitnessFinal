<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/surface_light"
    app:strokeColor="@color/primary_gold_light"
    app:strokeWidth="1dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Верхняя часть с заголовком -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <!-- Иконка тренировки -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_fitness"
                app:tint="@color/primary_gold"
                android:layout_marginEnd="12dp"
                android:contentDescription="Иконка тренировки" />

            <!-- Заголовок -->
            <TextView
                android:id="@+id/tvWorkoutTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Тренировка"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Информация в строку -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Длительность -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/primary_gold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvWorkoutDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 мин"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

            <!-- Дата -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/primary_gold"
                    android:layout_marginEnd="6dp" />

                <TextView
                    android:id="@+id/tvWorkoutDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.01.24"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Описание -->
        <TextView
            android:id="@+id/tvWorkoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Описание тренировки будет здесь..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:padding="12dp"
            android:background="@drawable/rounded_bg_light"
            android:layout_marginBottom="16dp" />

        <!-- ДВЕ КНОПКИ: РЕДАКТИРОВАТЬ И УДАЛИТЬ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <!-- Кнопка редактирования -->
            <Button
                android:id="@+id/btnEditWorkout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="РЕДАКТИРОВАТЬ"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                android:background="@drawable/button_gold_gradient"
                android:textColor="@color/white" />

            <!-- Кнопка удаления -->
            <Button
                android:id="@+id/btnDeleteWorkout"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="УДАЛИТЬ"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.03"
                android:background="@drawable/button_gold_outline"
                android:textColor="@color/primary_gold" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>